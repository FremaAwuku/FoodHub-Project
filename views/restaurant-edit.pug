extends layout.pug
include utils.pug
block content
    if errors
        each error in errors
            p=error
    form(action=`/restaurants/${restaurantId}/edit` method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        +field('Edit Restaurant',"name", restaurant.name)
        +field('Edit Address',"address", restaurant.address)
        select(type="select" name="cuisine")
            option(value="Italian") Italian
            option(value="Mexican") Mexican
            option(value="Indian") Indian
            option(value="American") American
            option(value="Jamaican") Jamaican
        +field('Edit Image URL',"imgURL",restaurant.imgURL , "textarea" )
    form(action=`/restaurants/${restaurantId}/delete` method="post")
        button  Delete #{restaurant.name}
